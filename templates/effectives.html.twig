{% extends "basePPSPS.html.twig" %}
{% block page %}
{% if effectives is defined and effectives != null %}
{% for key, value in effectives %}
<div class="pageContainer">
    <div class="pageContent">
        <div class="cornerTop"><img src="{{ asset('img/left-corner-top.jpg') }}"></div>
         {% if logo is not null %}
        <div class="cornerRight"><img src="{{ asset('groupLogo/' ~ logo) }}"></div>
        {% else %}
        <div class="cornerRight"><img src="{{ asset('img/logo.png') }}"></div>
        {% endif %}
        <h3 class="">1.1.3 Effectifs et horaires du chantier</h3>
        <h3 class="textLeft">Effectif sur le chantier</h3>
        <table class="col1">
            <tbody>
                <tr>
                    <th>Entreprise</th>
                    <th>Moyen <i>(nombre)</i></th>
                    <th>Maximum <i>(nombre)</i></th>
                </tr>
                {% for subvalue in value %}
                <tr>
                    <td>{{subvalue.business}}</td>
                    <td>{{subvalue.average}}</td>
                    <td>{{subvalue.maximum}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if value == effectives|last %}
        <h3 class="textLeft">Horaires sur le chantier</h3>
        <table class="col1">
            <tbody>
                <tr>
                    <th>Jours</th>
                    <th>Matin</th>
                    <th>Après-midi</th>
                </tr>
                <tr>
                    <td class="">Lundi</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="">Mardi</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="">Mercredi</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="">Jeudi</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="">Vendredi</td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        {% endif %}
        {% if beginStopWork is defined and beginStopWork != null and endStopWork is defined and endStopWork != null %}
            Fermeture prévu du chantier du <b>{{beginStopWork}}</b> au <b>{{endStopWork}}</b>
        {% endif %}
        <div class="bottomLeft">PPSPS {{siteName}} - {{siteNumber}}</div>
        <div class="rightPage">page {{page + key}}</div>
        <div class="bottomRight"><img src="{{ asset('img/right-corner-bottom.jpg') }}"></div>
    </div>
</div>
{% endfor %}
{% endif %}
{% endblock %}