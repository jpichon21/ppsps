{% block situationForm_widget %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-3">
                {{ form_row(form.situation) }}
            </div>
            {% if form.tool is defined %}
            <div class="col-md-3">
                {{ form_row(form.tool) }}
            </div>
            {% endif %}
            {% if form.risk is defined %}
            <div class="col-md-3">
                {{ form_row(form.risk) }}
            </div>
            {% endif %}
            {% if form.measure is defined %}
            <div class="col-md-3">
                {{ form_row(form.measure) }}
            </div>
            {% endif %}
        </div>
    {{ form_end(form) }}
{% endblock %}