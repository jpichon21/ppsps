                </tr>
                <tr>
                    <td class="bold title" colspan="2">1.3 Analyse des risques de ROUGEOT</td>
                    <td>page {{summaryRisks}}</td>
                </tr>
            </tbody>
        </table>

        <div class="bottomLeft">PPSPS {{siteName}} - {{siteNumber}}</div>
        <div class="rightPage">page {{page + 1}}</div>
        <div class="bottomRight"><img src="{{ asset('img/right-corner-bottom.jpg') }}"></div>
    </div>
</div>
{% endblock %}